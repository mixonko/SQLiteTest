<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#e6e6e6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Параметры"
        android:textColor="#111"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Фильтр пр производителю"
        android:textColor="#111" />

    <EditText
        android:id="@+id/manufacturerEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:textColor="#111"
        android:hint="Введите производителя"
        android:textColorHint="#965656"
        android:gravity="center"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="фильтр по марке"
        android:textColor="#111" />

    <EditText
        android:id="@+id/modelEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:textColor="#111"
        android:hint="Введите марку"
        android:textColorHint="#965656"
        android:gravity="center"
        android:clickable="false"/>


    <CheckBox
        android:id="@+id/sortByPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Сортировать по цене"
        android:textColor="#111" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Отмена" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Принять"
            android:textAllCaps="false"
            android:layout_gravity="bottom"/>


    </LinearLayout>


</LinearLayout>
