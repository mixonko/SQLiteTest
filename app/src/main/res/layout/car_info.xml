<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center|top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:text="@string/model" />

            <TextView
                style="@style/text"
                android:text="@string/name" />

            <TextView
                style="@style/text"
                android:text="@string/manufacturer" />

            <TextView
                style="@style/text"
                android:text="@string/year" />

            <TextView
                style="@style/text"
                android:text="@string/body_type" />

            <TextView
                style="@style/text"
                android:text="@string/engine_capacity" />

            <TextView
                style="@style/text"
                android:text="@string/engine_power" />

            <TextView
                style="@style/text"
                android:text="@string/price" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carModel"
                style="@style/text" />

            <TextView
                android:id="@+id/carName"
                style="@style/text" />

            <TextView
                android:id="@+id/manufacturer"
                style="@style/text" />

            <TextView
                android:id="@+id/year"
                style="@style/text" />

            <TextView
                android:id="@+id/bodyType"
                style="@style/text" />

            <TextView
                android:id="@+id/engineCapacity"
                style="@style/text" />

            <TextView
                android:id="@+id/enginePower"
                style="@style/text" />

            <TextView
                android:id="@+id/price"
                style="@style/text" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/change"
            style="@style/button"
            android:text="@string/button_change" />

        <Button
            android:id="@+id/save"
            style="@style/button"
            android:text="@string/button_save"
            android:visibility="invisible" />

    </FrameLayout>

</LinearLayout>


